{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    // "rootDir": "src",  // Remova ou comente esta linha
    "outDir": "./dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"]
    },
    "baseUrl": "src"
  },
  "include": ["src/**/*"]
}
